{
  "name": "node-api-base",
  "version": "1.0.0",
  "description": "API base from projects",
  "main": "index.js",
  "repository": "https://github.com/BrunoCiprianoDev/node-api-base.git",
  "author": "BrunoCiprianoDev <cipriano990@gmail.com>",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "tsc",
    "start": "dotenv -e .env -- node dist/src/index.js",
    "start:dev": "dotenv -e .env -- ts-node-dev --transpile-only src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "test:unit": "jest",
    "test:functional": "npm run test:docker:up && jest --projects ./test --runInBand && npm run test:docker:down",
    "test": "npm run test:unit && npm run test:functional",
    "test:docker:up": "docker compose up -d database_test",
    "test:docker:down": "docker compose stop database_test",
    "vercel-build": "npx prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.20",
    "@types/nodemailer": "^6.4.14",
    "@types/pino": "^7.0.5",
    "@types/pino-pretty": "^5.0.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@types/pg": "^8.11.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.9.10",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.10.2",
    "ts-node-dev": "^2.0.0",
    "uuid": "^9.0.1"
  }
}
